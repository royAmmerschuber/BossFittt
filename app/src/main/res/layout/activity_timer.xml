<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="125dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/lblSets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sets" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSetsDown"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/substract" />

            <TextView
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:id="@+id/sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <Button
                android:id="@+id/btnSetsUp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/plus" />

        </LinearLayout>

        <TextView
            android:id="@+id/lblWorkInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Work Interval" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnWorkIntervalDown"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/substract" />


            <TextView
                android:id="@+id/workInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:text="01 : 30" />

            <Button
                android:id="@+id/btnWorkIntervalUp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/plus" />

        </LinearLayout>

        <TextView
            android:id="@+id/lblRestInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rest Interval" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRestIntervalDown"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/substract" />

            <TextView
                android:id="@+id/restInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:text="00 : 30" />

            <Button
                android:id="@+id/btnRestIntervalUp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/plus" /> />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/timerStart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:onClick="workInterval"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:drawable/ic_media_play" />


</android.support.constraint.ConstraintLayout>